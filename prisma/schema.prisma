generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Employee {
  id   Int    @id @default(autoincrement())
  name String
  jobs Job[]
}

model Job {
  id           Int      @id @default(autoincrement())
  period_job   DateTime
  amount       Int
  gross_profit Int
  employee     Employee @relation(fields: [employeeId], references: [id])
  employeeId   Int
}
